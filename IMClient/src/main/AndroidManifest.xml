<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jersuen.im">


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".IM"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.jersuen.im.MainActivity"
                android:label="@string/app_name">

        </activity>

        <service
                android:name="com.jersuen.im.IMService"
                android:enabled="true"
                android:exported="true"
                android:process=":push"
                >
        </service>

        <provider android:authorities="com.jersuen.im.provider.ContactProvider" android:name=".provider.ContactProvider"/>

        <activity
                android:name="com.jersuen.im.ui.AccountActivity"
                android:label="@string/title_activity_account">
        </activity>
        <activity
                android:name="com.jersuen.im.ui.WelcomeActivity"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
    </application>

</manifest>
